      "npc_name": "Morrison",
      "dialog_type": "AVG",
      "speaker": "Morrison",
      "content": {
        "zh": "不知道？那你手里的枪怎么解释？",
        "en": "Don't know? Then how do you explain the gun in your hand?"
      },
      "character_portrait": "morrison_accusatory",
      "voice_file": "VO_Morrison_003",
      "front_node": "D004",
      "next_node": "D009",
      "is_end": false
