      "scene_id": "SC101",
      "npc_id": "NPC004",
      "npc_name": "Morrison",
      "dialog_type": "AVG",
      "speaker": "Morrison",
      "content": {
        "zh": "陷阱？是你自己心虚才这么说！",
        "en": "Trap? You're only saying that because you have a guilty conscience!"
      },
      "character_portrait": "morrison_dismissive",
      "voice_file": "VO_Morrison_004",
      "front_node": "D005",
      "next_node": "D009",
      "is_end": false
